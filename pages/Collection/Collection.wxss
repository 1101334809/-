.navbar{
	width: 100%;
	height: 105rpx;
	background-color: #fff;
	border-top: 3rpx solid #d1d1d1;
	position: fixed;
	box-shadow: 0px 7px 7px -7px #d1d1d1;
	z-index: 10;
}
.blst{
	border-bottom: 3rpx solid #d1d1d1;
}
.single{
	width: 89%;
	height: 100%;
